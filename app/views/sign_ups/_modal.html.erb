<div id="modal" data-backdrop="static" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">We'll get back to you soon.</h4>
      </div>
      <%= form_for @sign_up, remote: true do |f| %>
          <fieldset>
            <div class="modal-body">
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
              </div>
            </div>
            <div class="modal-footer">
              <%= submit_tag "Sign up", class: "btn btn-primary" %>
            </div>
          </fieldset>
      <% end %>
    </div>
  </div>
</div>

<div id="message_modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body"></div>
    </div>
  </div>
</div>