<div>
  An email has been sent to "<%= @sign_up.email %>" for confirmation.
</div>

<section role="share" class="lead">
  <div>
    Tell your friends to join along too.
  </div>

  <% %i[facebook twitter].each do |network| %>
      <%= link_to share_url(network, url: root_url, text: "Hack for a Place - Build a website for your favourite place"), target: "_blank" do %>
          <%= image_tag "#{network}_logo.png", class: "share" %>
      <% end %>
  <% end %>
</section>